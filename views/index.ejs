<html ng-app="dogPark">
<head>
  <title>Dog Park</title>
  <!-- External Modules -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/vendor/angular/angular.js"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular-resource.js"></script>
  <script src="/vendor/angular-ui-router/release/angular-ui-router.min.js"></script>
  <script src="/vendor/satellizer/satellizer.min.js"></script>
  <script src="/vendor/angular-jwt/dist/angular-jwt.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBxM36DxD-TmmCuWMML0UXBVSirOUkF42Q" charset="utf-8"></script>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700' rel='stylesheet' type="text/css">
    
  <!-- CSS Files -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
  <!-- JS Files -->
    <script src="/js/app.js"></script>
</head>

<body ng-controller="MainController as main">
    <div ng-hide="main.isLoggedIn()">
      <div class="container">
        <div class="row">
          <div class="col-md-7"> 
            <img src="https://images.unsplash.com/photo-1449439338818-435146fcb833?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=2d8a49637546cf2afe72c0c9cc077b4e">
      </div>
        <div class="col-md-5">
          <h1>Dog Park</h1>
          <h3>Meet other dogs and their owners around you.</h3>
          <p>Dog Park was created for dog owners to find. </p>
      <button class="facebook" ng-click="main.authenticate('facebook')"><i class="fa fa-facebook-square"></i> Sign in with Facebook</button>
            </div>
          </div>
        </div>
        </div>
      </div>
      </div>
      </div>
      <div ng-show="main.isLoggedIn()">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
            <a class="navbar-brand" href="#">
              <img class="brand" alt="Brand" src="images/Drawing.png">
              <a ui-sref-active="active" ui-sref="home" class="navbar-brand">Home</a>
              <a ui-sref-active="active" ui-sref="map"class="navbar-brand">Map</a>
              <a ui-sref-active="active" ui-sref="profile"class="navbar-brand">Edit Profile</a>
            </a>
          </div>
          <div ui-view></div>
        </div>
      </nav>
    </div>
  </div>
</body>
</html>
